<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/custom_game/custom_loading_screen.css" />
	</styles>
    <scripts>
		<include src="file://{resources}/scripts/custom_game/custom_loading_screen.js" />
    </scripts>
	<script>
		function updateBackground() {
			var mapName = Game.GetMapInfo().map_display_name;
			if (mapName === '') {
				$.Schedule(0, updateBackground);
				return;
			}

			var isCore = mapName === 'core_quartet';
			$('#seq_bg').visible = !isCore;
			$('#seq_bg_core').visible = isCore;
		}
		updateBackground();
	</script>
	<Panel class="OverthrowLoadingRoot">
		<Panel id="seq" >
			<Image id="seq_bg" class="SeqBg" src="file://{images}/custom_game/loading_screen/loading_seq_bg.psd" />
			<Image id="seq_bg_core" class="SeqBg" src="file://{images}/custom_game/loading_screen/loading_seq_bg_core.psd" />

			<Image id="seq_beastmaster_pets" class="SeqImg" src="file://{images}/custom_game/loading_screen/loading_seq_beastmaster_pets.psd" />
			<Image id="seq_beastmaster" class="SeqImg" src="file://{images}/custom_game/loading_screen/loading_seq_beastmaster.psd" />
			<Image id="seq_luna" class="SeqImg" src="file://{images}/custom_game/loading_screen/loading_seq_luna.psd" />
			<Image id="seq_juggernaut" class="SeqImg" src="file://{images}/custom_game/loading_screen/loading_seq_juggernaut.psd" />
			<Image id="seq_coins" class="SeqImg" src="file://{images}/custom_game/loading_screen/loading_seq_coins.psd" />
		</Panel>
		<Panel id="TitlePanel">
			<Label id="OverthrowTitle" text="#addon_game_name" style="" />
		</Panel>
		
			<!--Settings-->
			<Panel id="SettingsList" >
				<Label id="SettingsListLabel" text="Balance OP heroes?" />
				<DOTAHeroImage id="hero1" heroid="37" heroimagestyle="landscape" style="height:54px;width:96px; margin-top:10px; margin-left:0px;" onmouseover='DOTAShowTextTooltip(#warlock_balance_discr)' onmouseout='DOTAHideTextTooltip()'/>
				<!--<DOTAHeroImage id="hero2" heroid="2" heroimagestyle="landscape" style="height:54px;width:96px; margin-top:-54px; margin-left:121px;" onmouseover='DOTAShowTextTooltip(Test)' onmouseout='DOTAHideTextTooltip()'/>
				<DOTAHeroImage id="hero3" heroid="3" heroimagestyle="landscape" style="height:54px;width:96px; margin-top:10px; margin-left:20px;" onmouseover='DOTAShowTextTooltip(Test)' onmouseout='DOTAHideTextTooltip()'/>
				<DOTAHeroImage id="hero4" heroid="4" heroimagestyle="landscape" style="height:54px;width:96px; margin-top:-54px; margin-left:121px;" onmouseover='DOTAShowTextTooltip(Test)' onmouseout='DOTAHideTextTooltip()'/>-->
				<Button class="MyButton" onactivate='Vote(true)' style="height:28px;width:116px; margin-top:20px; margin-left:5px;">
					<Label class="MyButtonLabel" text="Yes" />
					<Label id="SchetYes" class="MyButtonSchet" text="-" />
				</Button>
				<Button class="MyButton" onactivate='Vote(false)' style="height:28px;width:116px; margin-top:-28px; margin-left:131px;">
					<Label class="MyButtonLabel" text="No" />
					<Label id="SchetNo" class="MyButtonSchet" text="-" />
				</Button>
			</Panel>
	</Panel>
</root>
